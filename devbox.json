{
  "packages": [
    "vcluster@latest",
    "k3d@latest",
    "kubernetes-helm@latest",
    "flux"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "k3d": [
        "k3d cluster create klst",
        "flux install"
      ],
      "clean": [
        "k3d cluster delete klst"
      ]
    }
  }
}
